>> f=@(x) x^3-4*x+1;
>> a=0; b=1;
>> tol = 0.003;
>> max_iter = 10;
>> for iter = 1:max_iter;
c=(a+b)/2;
fc=f(c);
fprintf('Iteration %d: a=%.6f, b=%.6f, c=%.6f, f(c)=%.6f\n', iter, a, b, c, fc);
 if abs(fc) < tol || (b - a)/2 < tol
        break;
    end

    if f(a)*fc < 0
        b = c;
    else
        a = c;
    end
end
